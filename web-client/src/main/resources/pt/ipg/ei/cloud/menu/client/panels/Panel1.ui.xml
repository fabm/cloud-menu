<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"

>

    <ui:style>
        .cursor-pointer {
            cursor: pointer;
        }
    </ui:style>

    <b:Panel>
        <b:PanelHeader>
            <b:Heading size="H3" text="Data Grid"/>
        </b:PanelHeader>
        <b:PanelBody>
            <b.gwt:DataGrid condensed="true" hover="true"
                            height="400px"
                            width="100%" ui:field="pessoaDataGrid"/>
            <b:Pagination ui:field="dataGridPagination"/>
        </b:PanelBody>
        <b:PanelFooter>
            <b:Heading size="H4" text="UiBinder"/>

            <b:Heading size="H4" text="Java code"/>

            <b.html:Paragraph>
                <strong>NOTE: The pagination.rebuild() after adding/removing data from the grid.
                </strong>
            </b.html:Paragraph>

        </b:PanelFooter>
    </b:Panel>

</ui:UiBinder>
