<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"


>


    <ui:style>
        .buttons button {
            margin: 0.5em;
        }

        .labels span {
            margin-right: 5px;
        }
    </ui:style>


    <g:ScrollPanel>

        <b:Container fluid="true">

            <b:Navbar position="FIXED_TOP">
                <b:Container>
                    <b:NavbarHeader>
                        <b:NavbarBrand targetHistoryToken="">Cloud menu</b:NavbarBrand>
                        <b:NavbarCollapseButton dataTarget="#navbar-collapse"/>
                    </b:NavbarHeader>
                    <b:NavbarCollapse b:id="navbar-collapse">
                        <b:NavbarNav >
                            <b:AnchorListItem text="Setup" targetHistoryToken="buttons"/>
                            <b:ListDropDown>
                                <b:AnchorButton dataToggle="DROPDOWN">Test Dropdown</b:AnchorButton>
                                <b:DropDownMenu>
                                    <b:AnchorListItem targetHistoryToken="other">test drop down item</b:AnchorListItem>
                                </b:DropDownMenu>
                            </b:ListDropDown>
                        </b:NavbarNav>
                        <b:NavbarText pull="RIGHT">
                            <b:Anchor ui:field="authIcon" iconPosition="RIGHT"/>
                        </b:NavbarText>
                    </b:NavbarCollapse>
                </b:Container>
            </b:Navbar>

            <g:SimplePanel ui:field="mainPanel"/>

        </b:Container>

    </g:ScrollPanel>


</ui:UiBinder>