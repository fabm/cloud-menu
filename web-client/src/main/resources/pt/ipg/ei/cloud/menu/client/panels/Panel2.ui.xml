<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"

>
    <b:Container fluid="true">

        <b:Row>
            <b:Column size="LG_6" offset="LG_3">

                <b:Form type="HORIZONTAL" ui:field="form">
                    <b:FieldSet>
                        <b:Legend>Sample form</b:Legend>

                        <b:FormGroup>
                            <b:FormLabel for="username">User</b:FormLabel>
                            <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE"/>
                            <b:TextBox b:id="username" ui:field="username"/>
                        </b:FormGroup>

                        <b:FormGroup>
                            <b:FormLabel for="tbName" addStyleNames="col-lg-2">Name</b:FormLabel>
                            <b:InlineHelpBlock iconType="EXCLAMATION_TRIANGLE"/>
                            <g:FlowPanel addStyleNames="col-lg-10">
                                <b:TextBox placeholder="blabla" b:id="tbName" ui:field="tbName"/>
                            </g:FlowPanel>
                        </b:FormGroup>

                        <b:FormGroup>
                            <g:FlowPanel addStyleNames="col-lg-offset-2 col-lg-10">
                                <b:Button ui:field="btSend">Send</b:Button>
                            </g:FlowPanel>
                        </b:FormGroup>
                    </b:FieldSet>
                </b:Form>
            </b:Column>
        </b:Row>
    </b:Container>

</ui:UiBinder>
